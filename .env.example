# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/product_catalog?schema=public

# OpenSearch / Elasticsearch
OPENSEARCH_NODE=http://localhost:9200
OPENSEARCH_INDEX_VARIANTS=variants

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Cache TTL (seconds)
CACHE_TTL_SEARCH=300
CACHE_TTL_FACETS=600

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Search Configuration
SEARCH_MAX_PAGE_SIZE=100
SEARCH_DEFAULT_PAGE_SIZE=20
SEARCH_SALES_BOOST_FACTOR=1.2
SEARCH_SALES_BOOST_MODIFIER=log1p
